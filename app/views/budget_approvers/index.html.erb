<p id="notice"><%= notice %></p>

<h1>Budget Approvers</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @budget_approvers.each do |budget_approver| %>
      <tr>
        <td><%= budget_approver.id %></td>
        <td><%=budget_approver.name%></td>
        <td><%=budget_approver.address%></td>
        <td><%= link_to 'Show', budget_approver %></td>
        <td><%= link_to 'Edit', edit_budget_approver_path(budget_approver) %></td>
        <td><%= link_to 'Destroy', budget_approver, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

