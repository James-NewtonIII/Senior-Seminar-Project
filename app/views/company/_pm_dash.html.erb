
<h3>Approved TAF Items</h3>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th> TAF ID </th>
            <th> Estimated Amount </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <% @taf_items.each do |taf_item| %>
       <% if taf_item.ba_approval%>
        <tr>
            <td> <%= taf_item.id %></li>
            <td> <%= number_to_currency(taf_item.estimated_amount)%> </td>
        </tr>
        <%end%>
    <% end %>
</table>       

<h3>Approved Items</h3>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th> Report ID </th>
            <th> Amount </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <% @items.each do |item| %>
       <% if item.ba_approval%>
        <tr>
            <td> <%= item.id %></li>
            <td> <%= number_to_currency(item.amount)%> </td>
        </tr>
        <%end%>
    <% end %>
</table>       



